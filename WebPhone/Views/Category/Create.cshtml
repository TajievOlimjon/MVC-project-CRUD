@using Domain.EntitiesDTO
@model CategoryDTO



<form asp-action="Create"  method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Названия:</label>
                <input asp-for="Name" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>Описания:</label>
                <input asp-for="Description" type="text" class="form-control" placeholder="Введите описания " tabindex="2">
            </div>
           
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Добавить</button>
                    <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Оменить</a>
                </center>
            </div>
        </div>
    </div>
</form>