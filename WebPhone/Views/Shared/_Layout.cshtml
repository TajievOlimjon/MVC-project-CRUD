
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Phone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" type="image/x-icon" href="assets/images/favicon.ico">
    <link rel="stylesheet" href="~/assets/css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/vendor/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/assets/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/vendor/themify-icons.css">
    <link rel="stylesheet" href="~/assets/css/vendor/cryptocurrency-icons.css">
    <link rel="stylesheet" href="~/assets/css/plugins/plugins.css">
    <link rel="stylesheet" href="~/assets/css/helper.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link id="cus-style"   rel="stylesheet" href="~/assets/css/style-primary.css">
</head>
<body>

    <div class="main-wrapper">
        <div class="header-section">
            <div class="container-fluid">
                <div class="row justify-content-between align-items-center">
                    <div class="header-logo col-auto">
                        <a asp-controller="Product" style="font-family: 'Monotype Corsiva'; font-size: 24px;" asp-action="Index">
                             Смартфоны
                        </a>
                    </div>
                    <div class="header-right flex-grow-1 col-auto">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                <div class="row align-items-center">
                                    <div class="col-auto"><button class="side-header-toggle"><i class="zmdi zmdi-menu"></i></button></div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <ul class="header-notification-area">
                                    <li class="adomx-dropdown col-auto">
                                        <a class="toggle" href="#">
                                            <span class="user">
                                                <span class="avatar">
                                                    <img src="assets/images/avatar/avatar-1.jpg" alt="">
                                                    <span class="status"></span>
                                                </span>
                                            </span>
                                        </a>
                                        <div class="adomx-dropdown-menu dropdown-menu-user">
                                            <div class="head">
                                               @* <a class="mail" href="#">@User.Identity.Name</a>*@
                                            </div>
                                            <div class="body">
                                                <ul>
                                                    <li><a asp-controller="Account" asp-action="Logout"><i class="zmdi zmdi-lock-open"></i>Выход</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="side-header show">
            <button class="side-header-close"><i class="zmdi zmdi-close"></i></button>
            <div class="side-header-inner custom-scroll">
                <nav class="side-header-menu" id="side-header-menu">
                    <ul>
                        <li class="has-sub-menu">
                            <a asp-controller="Product" asp-action="Index"><i class="ti-home"></i><span>Главная</span></a>
                        </li>
                        <li class="has-sub-menu">
                            <a href="#"><i class="ti-shopping-cart"></i> <span>Товары</span></a>
                            <ul class="side-header-sub-menu">
                                 <li><a asp-controller="Product" asp-action="GetAll"><span>Все смартфоны</span></a></li>
                                <li><a asp-controller="Product" asp-action="Create"><span>Добавление</span></a></li>
                               @* <li><a asp-controller="Product" asp-action="Edit"><span>Изменение</span></a></li>*@
                               
                            </ul>
                        </li>
                        <li class="has-sub-menu">
                            <a href="#"><i class="ti-archive"></i> <span>Категория товаров</span></a>
                            <ul class="side-header-sub-menu">
                               @* <li><a asp-controller="Category" asp-action="AddCategory"><span>Добавление категорий</span></a></li>*@
                                <li><a asp-controller="Category" asp-action="Index"><span>Список  категорий</span></a></li>
                                <li><a asp-controller="Category" asp-action="Create"><span>Добавить категорий</span></a></li>
                            </ul>
                        </li>
                        @*<li class="has-sub-menu">
                            <a href="#"><i class="ti-arrows-horizontal"></i> <span>Сатаус</span></a>
                            <ul class="side-header-sub-menu">
                                <li><a asp-controller="Status" asp-action="AddStatus"><span>Добавление статуса</span></a></li>
                                <li><a asp-controller="Status" asp-action="Index"><span>Изменение статуса</span></a></li>
                                <li><a asp-controller="Status" asp-action="Delete"><span>Удаление статуса</span></a></li>
                            </ul>
                        </li>

                        <li class="has-sub-menu">
                            <a href="#"><i class="ti-stack-overflow"></i> <span>Список заказов</span></a>
                            <ul class="side-header-sub-menu">
                                <li><a asp-controller="About" asp-action="Delete"><span>Посмотреть заказ</span></a></li>
                                <li><a asp-controller="Jewelere" asp-action="GetOrders"><span>Посмотреть доставку</span></a></li>
                            </ul>
                        </li>

                        <li class="has-sub-menu">
                            <a href="#"><i class="ti-lock"></i> <span>Авторизация</span></a>
                            <ul class="side-header-sub-menu">
                                <li><a asp-controller="Account" asp-action="Login"><span>Вход</span></a></li>
                                <li><a asp-controller="Account" asp-action="Register"><span>Регистрация</span></a></li>
                            </ul>
                        </li>*@
                    </ul>
                </nav>
            </div>
        </div>
        <div class="content-body">
            @RenderBody()
        </div>
        <div class="footer-section">
            <div class="container-fluid">

                <div class="footer-copyright text-center">
                    <p class="text-body-light">2022 &copy; <a href="../../../themeforest.net/user/codecarnival.html">Душанбе</a></p>
                </div>

            </div>
        </div>
    </div>
    <script src="~/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/assets/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="~/assets/js/vendor/popper.min.js"></script>
    <script src="~/assets/js/vendor/bootstrap.min.js"></script>
    <script src="~/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/assets/js/plugins/tippy4.min.js.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script src="~/assets/js/plugins/moment/moment.min.js"></script>
    <script src="~/assets/js/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/assets/js/plugins/daterangepicker/daterangepicker.active.js"></script>
    <script src="~/assets/js/plugins/chartjs/Chart.min.js"></script>
    <script src="~/assets/js/plugins/chartjs/chartjs.active.js"></script>
    <script src="~/assets/js/plugins/vmap/jquery.vmap.min.js"></script>
    <script src="~/assets/js/plugins/vmap/maps/jquery.vmap.world.js"></script>
    <script src="~/assets/js/plugins/vmap/maps/samples/jquery.vmap.sampledata.js"></script>
    <script src="~/assets/js/plugins/vmap/vmap.active.js"></script>
</body>
</html>